require 'spec_helper'

describe '<%= metadata.name %>' do
  context 'supported operating systems' do
    on_supported_os.each do |os, facts|
      context "on #{os}" do
        let(:facts) do
          facts
        end

        context "<%= metadata.name %>::config class without any parameters" do
          it { is_expected.to compile.with_all_deps }

          it { is_expected.to contain_class('<%= metadata.name %>::config').that_requires('Class[<%= metadata.name %>::install]') }
        end
      end
    end
  end
end
